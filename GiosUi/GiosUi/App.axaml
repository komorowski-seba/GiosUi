<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="GiosUi.App"
             xmlns:local="using:GiosUi"
             xmlns:viewModels="clr-namespace:GiosUi.ViewModels"
             xmlns:views="clr-namespace:GiosUi.Views"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->
             
             <Application.DataTemplates>
                 <DataTemplate DataType="viewModels:DataSourceViewModel">
                     <views:DataSourceView/>
                 </DataTemplate>
                 <DataTemplate DataType="viewModels:UpdatingFilesViewModel">
                     <views:UpdatingFilesView/>
                 </DataTemplate>
             </Application.DataTemplates>         

    <Application.Styles>
        <FluentTheme />
    </Application.Styles>
</Application>