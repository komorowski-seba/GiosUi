<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="GiosWebApp.App"
             xmlns:local="using:GiosWebApp"
             xmlns:viewModels="clr-namespace:GiosWebApp.ViewModels"
             xmlns:views="clr-namespace:GiosWebApp.Views"
             RequestedThemeVariant="Default">

             <Application.DataTemplates>
                 <DataTemplate DataType="viewModels:DataSourceViewModel">
                     <views:DataSourceView/>
                 </DataTemplate>
                 <DataTemplate DataType="viewModels:UpdatingFilesViewModel">
                     <views:UpdatingFilesView/>
                 </DataTemplate>
             </Application.DataTemplates>         
  
    <Application.Styles>
        <FluentTheme />
    </Application.Styles>
</Application>